{
    "name": "dalailomo/behato",
    "license": "MIT",
    "description": "Quick QA tool using behat",
    "minimum-stability": "dev",
    "config": {
        "bin-dir": "bin/"
    },
    "require": {
        "php": ">=5.6",
        "behat/behat": "^3.3",
        "behat/mink-extension": "^2.2",
        "behat/mink-goutte-driver": "^1.2",
        "behat/mink-selenium2-driver": "^1.3",
        "devinci/devinci-behat-extension": "dev-master",
        "react/child-process": "dev-master"
    },
    "bin": ["bin/installSeleniumStandalone", "bin/runServer"],
    "post-install-cmd": [
        "bash installSeleniumServer"
    ]
}
